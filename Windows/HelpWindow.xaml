<Window x:Class="ArduReader.Windows.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduReader"
        mc:Ignorable="d"
        Title="Help" Height="400" Width="700">
  
    <Grid>
        <Label Foreground="Blue"
            Content="Steps to Read Sensor Data:"
            HorizontalAlignment="Left" 
            Margin="10,5,0,0" 
            VerticalAlignment="Top"/>
        <Label 
            Content="1.) Select the device you want to read data from (Arduino)"
            HorizontalAlignment="Left" 
            Margin="10,20,0,0" 
            VerticalAlignment="Top"/>
        <Label 
            Content="2.) Select the Baud rate used by your Arduino (Check Arduino code to see - 9600 or 115200 are the most common.)"
            HorizontalAlignment="Left" 
            Margin="10,35,0,0" 
            VerticalAlignment="Top"/>
        <Label 
            Content="3.) Select 'Connect' - wait for banner message above the textbos and then select 'Read Data' to begin reading data."
            HorizontalAlignment="Left" 
            Margin="10,50,0,0" 
            VerticalAlignment="Top"/>
        <Label Foreground="Blue"
            Content="Steps to Close Serial Connection:"
            HorizontalAlignment="Left" 
            Margin="10,70,0,0" 
            VerticalAlignment="Top"/>
        <Label 
            Content="1.) Select 'Close CON' to close a serial connection between devices."
            HorizontalAlignment="Left" 
            Margin="10,85,0,0" 
            VerticalAlignment="Top"/>
        <Label Foreground="Blue"
            Content="Steps to Import Data:"
            HorizontalAlignment="Left" 
            Margin="10,110,0,0" 
            VerticalAlignment="Top"/>
        <Label 
            Content="1.) Select 'Import Data' and select a text file you would like to view."
            HorizontalAlignment="Left" 
            Margin="10,125,0,0" 
            VerticalAlignment="Top"/>
        <Label Foreground="Blue"
            Content="Steps to Export Data:"
            HorizontalAlignment="Left" 
            Margin="10,145,0,0" 
            VerticalAlignment="Top"/>
        <Label 
            Content="1.) If you would like, first close the serial connection (see steps above)."
            HorizontalAlignment="Left" 
            Margin="10,160,0,0" 
            VerticalAlignment="Top"/>
        <Label 
            Content="2.) Select 'Export Data' and save the file somewhere on your computer."
            HorizontalAlignment="Left" 
            Margin="10,175,0,0" 
            VerticalAlignment="Top"/>
    </Grid>
</Window>
