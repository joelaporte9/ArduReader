<Window x:Class="ArduReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArduReader"
        mc:Ignorable="d"
        Title="ArduReader" Height="470" Width="800">
    <Grid>

        <ListBox ItemsSource="{Binding Data}"
            HorizontalAlignment="Left" 
            Margin="10,61,0,0"
            VerticalAlignment="Top" 
            Width="758" Height="360" 
            ScrollViewer.CanContentScroll="True"/>
        <Button 
            Content="Export Data"
            Command="{Binding ExportCommand}" 
            HorizontalAlignment="Left" 
            Margin="685,36,0,0" 
            VerticalAlignment="Top" 
            Width="76"/>
        <Button 
            Content="Import Data" 
            Command="{Binding ImportCommand}"
            HorizontalAlignment="Left" 
            Margin="605,36,0,0" 
            VerticalAlignment="Top" 
            Width="76" />
        <Label 
            Content="COM port:"
            HorizontalAlignment="Left" 
            Margin="10,10,0,0" 
            VerticalAlignment="Top"/>
         <Label 
            Content="Connection Status:"
            HorizontalAlignment="Left" 
            Margin="10,35,0,0" 
            VerticalAlignment="Top"/>
        <Label 
            x:Name="lblMsg" 
            Content="{Binding Message}"
            HorizontalAlignment="Left" 
            Margin="110,35,0,0" 
            VerticalAlignment="Top"/>
        <Label 
            Content="Baud Rate:" 
            HorizontalAlignment="Left" 
            Margin="200,10,0,0" 
            VerticalAlignment="Top"/>
        <ComboBox 
            ItemsSource="{Binding baudrate}"
            SelectedItem="{Binding Connection.BaudRate}" 
            HorizontalAlignment="Left" 
            Margin="266,12,0,0" 
            VerticalAlignment="Top" 
            Width="120"/>
    
        <ComboBox
            ItemsSource="{Binding devicenames}"
            SelectedItem="{Binding Connection.DeviceName}" 
            HorizontalAlignment="Left" 
            Margin="75,12,0,0" 
            VerticalAlignment="Top" 
            Width="120"/>
        <Button Content="Connect"
            Command="{Binding ConnectCommand}"
            HorizontalAlignment="Left" 
            Margin="390,13,0,0"  
            VerticalAlignment="Top" 
            RenderTransformOrigin="-0.211,-0.048" />
        <Button Content="Read Data"
            Command="{Binding DataCommand}"
            HorizontalAlignment="Left" 
            Margin="440,13,0,0" 
            VerticalAlignment="Top" 
            RenderTransformOrigin="-0.211,-0.048" />
        <Button Content="Close CON"
            Command="{Binding CloseCommand}"
            HorizontalAlignment="Left" 
            Margin="515,13,0,0" 
            VerticalAlignment="Top" 
            RenderTransformOrigin="-0.211,-0.048" />
        <Label 
            Content="Device State:" 
            HorizontalAlignment="Left" 
            Margin="585,4,0,0" 
            VerticalAlignment="Top"/>
        <RadioButton Content="On" 
            HorizontalAlignment="Left" 
            Margin="660,11,0,0" 
            VerticalAlignment="Top" />
        <RadioButton Content="Off" 
            HorizontalAlignment="Left" 
            Margin="700,11,0,0" 
            VerticalAlignment="Top" />
    </Grid>
</Window>
