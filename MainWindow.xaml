<Window x:Class="ArduReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:oxycontrols="http://oxyplot.org/wpf/contrib"
        xmlns:local="clr-namespace:ArduReader.ViewModels"
        mc:Ignorable="d"
        Title="ArduReader" Height="700" Width="800">
    <Window.DataContext>
        <local:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="225" /> 
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding Data}"
            HorizontalAlignment="Left" 
            Margin="10,61,0,0"
            VerticalAlignment="Top" 
            Width="758" Height="360" 
            ScrollViewer.CanContentScroll="True"/>
        <Button 
            Content="Export Data"
            Command="{Binding ExportCommand}" 
            HorizontalAlignment="Left" 
            Margin="685,36,0,0" 
            VerticalAlignment="Top" 
            Width="76"/>
        <Button 
            Content="Import Data" 
            Command="{Binding ImportCommand}"
            HorizontalAlignment="Left" 
            Margin="605,36,0,0" 
            VerticalAlignment="Top" 
            Width="76" />
        <Label 
            Content="COM port:"
            HorizontalAlignment="Left" 
            Margin="10,10,0,0" 
            VerticalAlignment="Top"/>
         <Label 
            Content="Connection Status:"
            HorizontalAlignment="Left" 
            Margin="10,35,0,0" 
            VerticalAlignment="Top"/>
        <Label 
            Content="{Binding Message}"
            HorizontalAlignment="Left" 
            Margin="110,35,0,0" 
            VerticalAlignment="Top"/>
        <Label 
            Content="Baud Rate:" 
            HorizontalAlignment="Left" 
            Margin="200,10,0,0" 
            VerticalAlignment="Top"/>
        <ComboBox 
            ItemsSource="{Binding baudrate}"
            SelectedItem="{Binding Connection.BaudRate}" 
            HorizontalAlignment="Left" 
            Margin="266,12,0,0" 
            VerticalAlignment="Top" 
            Width="120"/>
        <ComboBox
            ItemsSource="{Binding devicenames}"
            SelectedItem="{Binding Connection.DeviceName}" 
            HorizontalAlignment="Left" 
            Margin="75,12,0,0" 
            VerticalAlignment="Top" 
            Width="120"/>
        <Button Content="Connect"
            Command="{Binding ConnectCommand}"
            HorizontalAlignment="Left" 
            Margin="390,13,0,0"  
            VerticalAlignment="Top" 
            RenderTransformOrigin="-0.211,-0.048" />
        <Button Content="Read Data"
            Command="{Binding DataCommand}"
            HorizontalAlignment="Left" 
            Margin="503,13,0,0" 
            VerticalAlignment="Top" 
            RenderTransformOrigin="-0.211,-0.048" />
        <Button Content="Close CON"
            Command="{Binding CloseCommand}"
            HorizontalAlignment="Left" 
            Margin="440,13,0,0" 
            VerticalAlignment="Top" 
            RenderTransformOrigin="-0.211,-0.048" />
        <Button Content="Help"
            Command="{Binding HelpCommand}"
            HorizontalAlignment="Left" 
            Margin="570,13,0,0" 
            VerticalAlignment="Top"
            RenderTransformOrigin="-0.211,-0.048"/>
        <Button Content="Logs"
            Command="{Binding LogCommand}"
            HorizontalAlignment="Left" 
            Margin="610,13,0,0" 
            VerticalAlignment="Top"
            RenderTransformOrigin="-0.211,-0.048"/>
        <oxycontrols:Plot x:Name="plot" Grid.Row="1">
            <oxycontrols:Plot.Axes>
                <oxycontrols:LinearAxis Title="Data Readig Index" Position="Bottom" IsZoomEnabled="True" />
            <oxycontrols:LinearAxis Title="Data Points" Position="Left" IsZoomEnabled="True" />
        </oxycontrols:Plot.Axes>
        <oxycontrols:Plot.Series>
            <oxycontrols:LineSeries Title="Plot1"  Color="Black"  ItemsSource="{Binding DataPointList1}" />
            <oxycontrols:LineSeries Title="Plot2"  Color="Green"  ItemsSource="{Binding DataPointList2}"/>
            <oxycontrols:LineSeries Title="Plot3"  Color="Blue"   ItemsSource="{Binding DataPointList3}"/>
        </oxycontrols:Plot.Series>
        </oxycontrols:Plot>
    </Grid>
</Window>
